<% include ../modules/_header %>

<div class="row justify-content-center wrapper">
    <div class="col-md-12 text-center mb-2">
        <h2><i class="far fa-edit pr-3"></i>Edit campground</h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Name</label>
                <input  class="form-control" type="text" name="campground[name]" 
                        autofocus required value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="">Image</label>
                <input  class="form-control" type="text" name="campground[image]"
                        value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input  class="form-control" type="text" name="campground[location]" 
                        id="location" value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <label for="">Price</label>
                <input  class="form-control" type="number" name="campground[price]" 
                        placeholder="Update price of the new campsite..."
                        min="0.01" step="0.01" value="<%= campground.price %>">
            </div>
            <div class="form-group">
                <label for="">Description</label>
                <textarea name="campground[description]" required><%= campground.description %>
                </textarea>
            </div>
            <button class="btn btn-lg btn-default btn-block btn-primary"><i class="far fa-share-square pr-3"></i>Update</button>
        </form>
        <a class="btn btn-light btn-small float-right" href="/campgrounds/<%= campground._id %>"><i class="fas fa-long-arrow-alt-left pr-2"></i>Go Back</a>
    </div>
</div>

<% include ../modules/_footer %>