<% include ../modules/_header %>
<div class="row justify-content-center flex-grow-1 p-3">
    <div class="col-xs-12 col-md-8 col-lg-6 d-flex flex-column justify-content-start
        align-items-center border border-info mb-3 p-3">
        <h2 class="form__title text-muted text-center pt-3 mb-5">
            <i class="far fa-edit pr-1"></i>
            Edit campground
        </h2>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="mb-3 p-3 w-100">
            <div class="form-group mb-5">
                <label for="" class="form__label text-muted text-uppercase">Name</label>
                <input  class="form__input" type="text" name="campground[name]"
                        pattern="^[a-zA-Z][a-zA-Z0-9-_\.\s']{5,20}$" 
                        value="<%= campground.name %>" autofocus required>
            </div>
            <div class="form-group mb-5">
                <label for="" class="form__label text-muted text-uppercase">Image</label>
                <input  class="form__input" type="text" name="campground[image]"
                        value="<%= campground.image %>">
            </div>
            <div class="form-group mb-5">
                <label for="location" class="form__label text-muted text-uppercase">Location</label>
                <input  class="form__input" type="text" name="campground[location]" 
                        id="location" value="<%= campground.location %>" required>
            </div>
            <div class="form-group mb-5">
                <label for="" class="form__label text-muted text-uppercase">Price</label>
                <input  class="form__input" type="number" name="campground[price]" 
                        placeholder="Update price of the new campsite..."
                        min="0.01" step="0.01" value="<%= campground.price %>" required>
            </div>
            <div class="form-group mb-5">
                <label for="formDescription" class="form__label text-muted text-uppercase">Description</label>
                <textarea   name="campground[description]" class="form__input p-3" id="formDescription"
                            minlength="500" maxlength="5000"
                            title="Add a description of min 500 and max 2000 characters"
                            required><%= campground.description %></textarea>
            </div>
            <button class="btn btn-md btn-block btn-outline-info">
                <i class="far fa-share-square pr-1"></i>
                Update
            </button>
        </form>
        <a class="btn btn-light btn-sm text-muted mb-3" href="/campgrounds/<%= campground._id %>">
            <i class="fas fa-long-arrow-alt-left pr-1"></i>
            Go Back
        </a>
    </div>
</div>
<% include ../modules/_footer %>