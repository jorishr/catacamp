<% include ../modules/_header %>

<div class="row justify-content-center wrapper">
    <div class="col-md-12 text-center mb-2">
        <h2>Edit campground</h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Name</label>
                <input  class="form-control" type="text" name="campground[name]" 
                        value="<%= campground.name %>" id="">
            </div>
            <div class="form-group">
                <label for="">Image</label>
                <input  class="form-control" type="text" name="campground[image]"
                        value="<%= campground.image %>" id="">
            </div>
            <div class="form-group">
                <label for="">Description</label>
                <textarea   name="campground[description]" id="">
                        <%= campground.description %>
                </textarea>
            </div>
            <button class="btn btn-lg btn-default btn-block btn-primary">Update</button>
        </form>
        <a class="btn btn-light btn-small float-right" href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../modules/_footer %>