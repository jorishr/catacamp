<% include ../modules/_header %>
<div class="container flex-grow-1">
    <header class="jumbotron text-center pb-lg-5 pt-lg-5">
        <div class="container">
            <div class="d-flex flex-column justify-content-center pb-4 pb-lg-3">
                <i class="fas fa-campground fa-6x text-info pb-4"></i>
                <!-- <h1 class="pt-3"><strong>CataCamp</strong></h1> -->
                <h1 class="jumbotron__title pr-md-5 pl-md-5 mr-md-3 ml-md-3">Start exploring the best campground destinations in Catalonia!</h1>     
            </div>
            <form   action="/campgrounds" method="GET" 
                    class="form-inline justify-content-center pb-4 pb-lg-3">
                <div class="search-box">
                    <label for="search-form"></label>
                    <input  class="search-box__text" type="text" name="search" 
                            placeholder="Enter a location or name...">
                    <button class="search-box__btn" type="submit">
                            <i class="fas fa-search-location"></i>
                    </button>
                </div>
            </form>
            <p class="jumbotron__subtitle">Want to share a fantastic campsite that is not listed yet?<p>
            <p class="mb-0">
                <a  class="btn btn-large btn-outline-info jumbotron__btn" 
                    href="/campgrounds/new">
                    <i class="fas fa-plus pr-2"></i>
                    Add a new campground
                </a>
            </p>
        </div>
    </header>
    <div class="row text-center card-grid mb-3">
        <% if(noMatch !== null){ %> 
        <div class="container">
            <p><%= noMatch %></p>
            <a href="/campgrounds" class="btn btn-info mb-3">See all campgrounds</a>
        </div>
        <% } %>
        <% campgrounds.forEach(campground => { %>
        <!-- <div class="col-sm-12 col-md-6 col-lg-3 mb-4 p-0"> -->   
            <div class="index-grid card h-100">
                <figure>
                    <img    class=""
                            src="/<%= campground.image %>" alt="Image of the campground /<%= campground.name %>">
                </figure>
                <div class="card-body">
                    <h4 class="card-title text-muted"><%= campground.name %></h4>
                </div>
                <div class="card-footer">
                    <a  href="/campgrounds/<%= campground._id %>" title="CAMPGROUND PROFILE"
                        class="btn btn-outline-info">see more...<i class="fas fa-chevron-right pl-1"></i></a>
                </div>
            </div>
<!--         </div> -->
        <% }) %>
    </div>
</div>   
<% include ../modules/_footer %>
