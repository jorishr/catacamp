<% include ../modules/_header %>
<div class="container">

    <header class="jumbotron text-center">
        <div class="container">
            <h1><i class="fas fa-campground"></i></span><strong>Welcome to CataCamp</strong></h1>
            <h3 class="mb-3">Check out these amazing campgrounds in Catalonia!</h3>     
            <form action="/campgrounds" method="GET" class="form-inline justify-content-center mb-3">
                <div class="form-group">
                    <label for="search-form"></label>
                    <input  class="form-control mb-1" type="text" name="search" 
                            placeholder="Enter a location or name..." id="">
                    <input  class="btn btn-light mb-1" type="submit" value="search">
                </div>
            </form>
            <p>Want to share a fantastic campsite that is not listed yet?<p>
            <p>
                <a  class="btn btn-large btn-outline-info" 
                    href="/campgrounds/new">Add a new campground</a>
            </p>

        </div>
    </header>
    <div class="row text-center card-deck">
        <% if(noMatch !== null){ %> 
        <div class="container">
            <p><%= noMatch %></p>
            <a href="/campgrounds" class="btn btn-info mb-3">See all campgrounds</a>
        </div>
        <% } %>
        <% campgrounds.forEach(campground => { %>
        <div class="col-sm-12 col-md-6 col-lg-3 mb-4 p-0">    
            <div class="card h-100">
                <img    class="card-img-top"
                        src="/<%= campground.image %>" alt="Image of the campground /<%= campground.name %>">
                <div class="card-body">
                    <h4 class="card-title"><%= campground.name %></h4>
                </div>
                <div class="card-footer">
                    <a  href="/campgrounds/<%= campground._id %>"
                        class="btn btn-outline-primary">More info...</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>   
<% include ../modules/_footer %>
