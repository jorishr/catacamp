<% include ./modules/_header %>

<div class="row justify-content-center wrapper">
    <div class="col-md-12 text-center mb-2">
        <h2>Register as a new user</h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/register" method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Username</label>
                <input  class="form-control" type="text" name="username" 
                        placeholder="Enter a new username..." id="" required>
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input  class="form-control" type="email" name="email" 
                        placeholder="Enter your email address..." id="" required>
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input  class="form-control" type="password" name="password" 
                        placeholder="Enter a new password..." id="" required>
            </div>
            <div class="form-group">
                <label for="">First Name</label>
                <input  class="form-control" type="text" name="firstName" 
                        placeholder="Enter your first name..." id="" required>
            </div>
            <div class="form-group">
                <label for="">Last Name</label>
                <input  class="form-control" type="text" name="lastName" 
                        placeholder="Enter your last name..." id="" required>
            </div>
            <div class="form-group">
                <label for="">Date of birth</label>
                <input  class="form-control" type="date" name="dateOfBirth" 
                        id="" required>
            </div>
            <button class="btn btn-lg btn-default btn-block btn-primary">Register</button>
        </form>
        <a class="btn btn-light btn-small float-right" href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./modules/_footer %>