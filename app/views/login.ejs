<% include ./modules/_header %>

<div class="row justify-content-center wrapper">
    <div class="col-md-12 text-center mb-2">
        <h2>Login to the site</h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/login" method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Username</label>
                <input  class="form-control" type="text" name="username" 
                        placeholder="Enter your username..." id="" required>
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input  class="form-control" type="password" name="password" 
                        placeholder="Enter your password..." id="" required>
            </div>
            <button class="btn btn-lg btn-default btn-block btn-primary">Login</button>
        </form>
        <a class="btn btn-light btn-small float-right" href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./modules/_footer %>