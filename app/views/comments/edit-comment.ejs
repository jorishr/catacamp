<% include ../modules/_header %>
<div class="row justify-content-center">
    <div class="col-md-12 text-center mb-3">
        <h2>Edit your comment to: <%= campground.name %></h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form   action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" 
                method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Comment</label>
                <textarea name="comment[text]" required autofocus><%= comment.text %></textarea>
            </div>
            <button class="btn btn-lg btn-default btn-block btn-primary">Update</button>
        </form>
        <a class="btn btn-light float-right" href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>

<% include ../modules/_footer %>