<% include ./modules/_header %>

<div class="container flex-grow-1 pt-3 pb-3">
    <div class="row justify-content-center">
        <div class="card">
            <h1 class="card-header text-center text-muted error__text">Something went wrong!</h1>
            <div class="card-body">
                <h3 class="card-body text-muted error__text">Error: <%= error.message %></h3>
                <h4 class="card-body text-warning error__text">Status: <%= error.statusCode %></h4>
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-info" href="/">
                    <i class="fas fa-long-arrow-alt-left pr-2"></i>
                    Back to home!
                </a>
            </div>
        </div>
    </div>
</div>
 

<% include ./modules/_footer %>