<% include ../modules/_header %>

<div class="row justify-content-center flex-grow-1 p-0">
    <div class="col-md-12 text-center mb-2">
        <h2><i class="fas fa-sign-in-alt pr-3"></i>Login to the site</h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/login" method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Username</label>
                <input  class="form-control" type="text" name="username" 
                        placeholder="Enter your username..." autofocus required>
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input  class="form-control" type="password" name="password" 
                        placeholder="Enter your password..." required>
            </div>
            <button class="btn btn-lg btn-default btn-block btn-primary">
                Login
            </button>
        </form>
        <a class="btn btn-light btn-small float-right mb-3 ml-3" href="/campgrounds"><i class="fas fa-long-arrow-alt-left pr-2"></i>Go Back</a>
        <a class="btn btn-light btn-small float-right mb-3" href="/forgot"><i class="fas fa-lock pr-3"></i>Forgot your password?</a>
        <div>
            <a class="btn btn-light btn-small float-right mb-3" href="/register">New here? Sign up!
            </a>
        </div>
    </div>
</div>

<% include ../modules/_footer %>