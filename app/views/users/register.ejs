<% include ../modules/_header %>

<div class="row justify-content-center wrapper">
    <div class="col-md-12 text-center mb-2">
        <h2><i class="fas fa-user-plus pr-3"></i>Register as a new user</h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4 mb-3">
        <form action="/register" method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Username</label>
                <input  class="form-control" type="text" name="username" 
                        placeholder="Enter a new username..." autofocus required>
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input  class="form-control" type="email" name="email" 
                        placeholder="Enter your email address..." required>
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input  class="form-control" type="password" name="password" 
                        placeholder="Enter a new password..." required>
            </div>
            <div class="form-group">
                <label for="">First Name</label>
                <input  class="form-control" type="text" name="firstName" 
                        placeholder="Enter your first name..." required>
            </div>
            <div class="form-group">
                <label for="">Last Name</label>
                <input  class="form-control" type="text" name="lastName" 
                        placeholder="Enter your last name..." id="" required>
            </div>
            <div class="form-group">
                <label for="">Date of birth</label>
                <input  class="form-control" type="date" name="dateOfBirth" 
                        value="<%= new Date().toLocaleDateString(('es-ES'), {year: 'numeric', month: '2-digit', day: '2-digit'}) %>" min="1900-01-01"> 
             </div>
            <button class="btn btn-lg btn-default btn-block btn-primary">Register</button>
        </form>
        <a class="btn btn-light btn-small float-right" href="/campgrounds"><i class="fas fa-long-arrow-alt-left pr-2"></i>Go Back</a>
    </div>
</div>

<% include ../modules/_footer %>