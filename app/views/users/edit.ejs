<% include ../modules/_header %>

<div class="row justify-content-center wrapper">
    <div class="col-md-12 text-center mb-2">
        <h2>Update your user profile</h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/user/<%= userData._id %>?_method=PUT" method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Username</label>
                <input  class="form-control" type="text" name="profile[username]" 
                        value="<%= userData.username %>" id="" required>
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input  class="form-control" type="email" name="profile[email]" 
                        value="<%= userData.email %>" id="" required>
            </div>
            <div class="form-group">
                <label for="">First Name</label>
                <input  class="form-control" type="text" name="profile[firstname]" 
                        value="<%= userData.firstname %>" id="" required>
            </div>
            <div class="form-group">
                <label for="">Last Name</label>
                <input  class="form-control" type="text" name="profile[lastname]" 
                        value="<%= userData.lastname %>" id="" required>
            </div>
            <div class="form-group">
                <label for="">Date of birth</label>
                <input  class="form-control" type="date" name="profile[dateOfBirth]" 
                        id="" required value="<%= userData.dateOfBirth %>">
            </div>
            <button class="btn btn-lg btn-default btn-block btn-primary">Update</button>
        </form>
        <a  class="btn btn-outline-dark btn-small float-right" href="/campgrounds">Go Back</a>
        <form   action="/user/<%= userData._id %>?_method=DELETE" 
                method="post" class="float-left deleteForm">
            <button class="btn btn-outline-danger btn-sm">Delete your profile</button>
        </form>
    </div>
</div>

<% include ../modules/_footer %>