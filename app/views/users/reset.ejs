<% include ../modules/_header %>

<div class="row justify-content-center flex-grow-1 p-3">
    <div    class="col-xs-12 col-md-6 col-lg-4 d-flex flex-column justify-content-start 
            align-items-center border border-info p-3 mb-3">
        <h2 class="form__title text-muted text-center mb-5">
            <i class="fas fa-key pr-1"></i>
            Enter your new password
        </h2>
        <form action="/reset/<%= token %>" method="POST" class="mb-3 p-3">
            <div class="form-group mb-5">
                <label  for="pwField" class="form__label text-muted text-uppercase">
                    Enter new password
                </label>
                <div class="password-box">
                    <input  class="form__input password-box__input" type="password" name="password" id="pwField" 
                            placeholder="Enter a new password..." autofocus required>
                    <i  class="far fa-eye password-box__icon text-muted" 
                        onclick="passwordToggle()" id="pwIcon">
                    </i>
                </div>
            </div>
            <div class="form-group mb-5">
                    <label  for="formPasswordConfirm" class="form__label text-muted text-uppercase">
                        Confirm new password
                    </label>
                    <input  class="form__input" type="password" name="confirm" 
                            placeholder="Repeat your new password..." id="formPasswordConfirm" required>
            </div>
            <button class="btn btn-md btn-block btn-outline-info">
                <i class="fas fa-share-square pr-1"></i>
                Save new password
            </button>
        </form>
    </div>
</div>

<% include ../modules/_footer %>