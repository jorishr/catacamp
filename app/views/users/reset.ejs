<% include ../modules/_header %>

<div class="row justify-content-center wrapper">
    <div class="col-md-12 text-center mb-2">
        <h2>Enter your new password</h2>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/reset/<%= token %>" method="POST" class="mb-3">
            <div class="form-group">
                <label for="">Enter new password</label>
                <input  class="form-control" type="password" name="password" 
                        placeholder="Enter a new password..." id="" required>
            </div>
            <div class="form-group">
                    <label for="">Confirm your new password</label>
                    <input  class="form-control" type="password" name="confirm" 
                            placeholder="Repeat your new password..." id="" required>
                </div>
            <button class="btn btn-lg btn-default btn-block btn-primary">Save your new password</button>
        </form>
    </div>
</div>

<% include ../modules/_footer %>